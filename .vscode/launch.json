    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--path", "${workspaceFolder}/assignments/assignment_1/assignment_1_code/fdir"],
        },
        {
            "name": "Run TRAIN - CIFAR-10",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/assignments/assignment_1/train.py",
            "console": "integratedTerminal",
            "args": [
                "--path",
                "${workspaceFolder}/assignments/assignment_1/assignment_1_code/fdir",
                "--save_path",
                "${workspaceFolder}/assignments/assignment_1/assignment_1_code/fdir",
                "--num_epochs",
                "10"
            ]
        },
        {
            "name": "Run TEST - CIFAR-10",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/assignments/assignment_1/test.py",
            "console": "integratedTerminal",
            "args": [
                "--path",
                "${workspaceFolder}/assignments/assignment_1/assignment_1_code/fdir",
                "--save_path",
                "${workspaceFolder}/assignments/assignment_1/assignment_1_code/fdir",
                "--num_epochs",
                "10"
            ]
        }
    ]
}